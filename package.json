{
  "name": "agro-server",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "yarn --cwd client start",
    "add-packages": "yarn install && cd client && yarn install",
    "dev": "concurrently \"yarn run server\" \"yarn run client\""
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt-nodejs": "^0.0.3",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "prettier": "^1.18.2"
  }
}
